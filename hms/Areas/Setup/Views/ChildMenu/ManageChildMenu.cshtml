@model hms.DataModel.US_CHILD_MENU

@{
    ViewData["Title"] = "Child Menu";
}

<div class="card card-secondary card-outline">

    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-edit"></i>
            @ViewData["Title"]
        </h3>
    </div>

    <form asp-action="ManageChildMenu" asp-controller="ChildMenu" method="post">
        <div class="card-body">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <input hidden asp-for="ID" />
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CHILD_NAME" class="control-label"></label>
                            <input asp-for="CHILD_NAME" class="form-control form-control-sm" />
                            <span asp-validation-for="CHILD_NAME" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CHILD_BN_NAME" class="control-label"></label>
                            <input asp-for="CHILD_BN_NAME" class="form-control form-control-sm" />
                            <span asp-validation-for="CHILD_BN_NAME" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CHILD_ICON" class="control-label"></label>
                            <input asp-for="CHILD_ICON" class="form-control form-control-sm" />
                            <span asp-validation-for="CHILD_ICON" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="AREA_NAME" class="control-label"></label>
                            <input asp-for="AREA_NAME" class="form-control form-control-sm" />
                            <span asp-validation-for="AREA_NAME" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CONTROLLER_NAME" class="control-label"></label>
                            <input asp-for="CONTROLLER_NAME" class="form-control form-control-sm" />
                            <span asp-validation-for="CONTROLLER_NAME" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="ACTION_NAME" class="control-label"></label>
                            <input asp-for="ACTION_NAME" class="form-control form-control-sm" />
                            <span asp-validation-for="ACTION_NAME" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="US_MODULE_ID" class="control-label"></label>
                            <select asp-for="US_MODULE_ID" class="form-control form-control-sm" asp-items="ViewBag.US_MODULE_ID"><option selected>-Select-</option></select>
                            <span asp-validation-for="US_MODULE_ID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="US_PARENT_MENU_ID" class="control-label"></label>
                            <select asp-for="US_PARENT_MENU_ID" class="form-control form-control-sm" asp-items="ViewBag.US_PARENT_MENU_ID"><option selected>-Select-</option></select>
                            <span asp-validation-for="US_PARENT_MENU_ID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="IS_ACTIVE" class="control-label"></label>
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IS_ACTIVE" />
                                <label class="form-check-label"> @Html.DisplayNameFor(model => model.IS_ACTIVE)</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary float-right">Submit</button>
            <input type="button" onclick="location.reload();" class="btn btn-secondary float-left" value="Cancel" />
        </div>

    </form>

</div>

<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"] List</h3>
    </div>
    <div class="card-body table-responsive">
        <table id="myTable1" class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Bangla Name</th>
                    <th>Icon</th>
                    <th>Area</th>
                    <th>Controller</th>
                    <th>Action</th>
                    <th>Module</th>
                    <th>Parent Menu</th>
                    <th>Status</th>
                    <th>Option</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Areas/Setup/childmenu.js"></script>
}
